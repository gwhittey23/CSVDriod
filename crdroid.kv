#:include force screens/library_screen.kv
#:include force screens/comicscreen.kv
#:include force parts.kv
<RootWidget>:
    manager: manager
    ScreenManager:
        id: manager
        Screen:
            name: 'MainScreen'
            TopActionBar:
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'first screen!'
                    font_size: 30
                TextInput:
                    id:txt1
                    size_hint: .2,.07
                    text: '1855'

                BoxLayout:
                    Button:
                        text: 'Back to Comic Book'
                        font_size: 15
                        on_release: root.manager.current = 'comicscreen'
                    Button:
                        text: 'Load Config'
                        font_size: 15
                        on_release: root.manager.current = 'libraryScreen'
                        on_release: app.root.load_lib_screen()
                    Button:
                        text: 'Comic Screen'
                        font_size: 15
                        on_release: root.manager.current = 'comicscreen'
                        on_release: root.load_comic_screen(1855)
                        on_release: root.pos_hint =  {'top': 1}
        LibraryScreen:

        ComicScreen:
            name: 'comicscreen'
            id: comicscreenid


