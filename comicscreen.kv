<ComicScreen>:
    name: 'comicscreen'
    id: bl
    FloatLayout:
        Label:
            color: (255,0,255,1)
        Carousel:
            id: my_carousel
            size_hint: 1,1

        Button:
            pos_hint: {'x': .85, 'y': .95}
            text: "Back to Library"
            size_hint: .2, .05
            on_release: root.manager.current = 'libraryScreen'
            opacity: 0

        Button:
            pos_hint: {'x': .01, 'y': .0001}
            text: "Prev"
            size_hint: .2, .05
            on_release: my_carousel.load_previous()
            opacity: 0
        Button:
            pos_hint: {'x': .85, 'y': .001}
            text: "Next"
            size_hint: .2, .05
            on_release: my_carousel.load_next()
            opacity: 0
        Button:
            pos_hint: {'x': .3, 'y': .0001}
            text: 'Open Page Scroll'
            size_hint: .4, .05
            opacity: 0
            on_release: app.root.open_pagescroll_popup()